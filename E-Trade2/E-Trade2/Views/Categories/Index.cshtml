@model IEnumerable<E_Trade2.Models.Categories>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h1>Category Management</h1>
</div>

<p>
    @Html.ActionLink("Create New", "Create",new {@class="btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }, new { @class = "btn btn-success" })
            @Html.ActionLink("Details", "Details", new { id = item.CategoryId }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
